            <ListView fx:id="selectedBooksListView" prefHeight="300.0" />
            <Button onAction="#handleRetirerLivre" text="Retirer Livre" />
        </VBox>

        <Button layoutX="1050.0" layoutY="634.0" onAction="#handleEmprunter" prefHeight="25.0" prefWidth="166.0" text="Emprunter" />
