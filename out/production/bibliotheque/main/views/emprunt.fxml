                <TextArea fx:id="textFieldUser" prefHeight="37.0" prefWidth="329.0" promptText="Recherche d'Utilisateur" />
                <Button prefHeight="25.0" prefWidth="166.0" text="Rechercher" onAction="#handleSearchUser"/>
            </HBox>
            <HBox prefHeight="555.0" prefWidth="341.0">
                <TableView fx:id="userTableView" onMouseClicked="#handleUserSelection" prefHeight="544.0" prefWidth="331.0">
                    <columns>
                        <TableColumn fx:id="nomColumn" prefWidth="160.0" text="Nom" />
                        <TableColumn fx:id="prenomColumn" prefWidth="170.0" text="Prénom" />
                    </columns>
                </TableView>
            </HBox>
        </VBox>

        <VBox layoutX="562.0" layoutY="58.0" prefHeight="576.0" prefWidth="364.0" spacing="10">
            <Label text="Liste des livres :" />
